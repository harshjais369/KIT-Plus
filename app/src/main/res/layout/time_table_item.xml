<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_calendar_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    android:background="@drawable/title_bar_calendar_selected_item_background"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_access_time_24"
            android:layout_marginEnd="5dp" />

        <TextView
            android:id="@+id/tv_period_timeTableItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:00 AM - 12:00 PM"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_ongoingClass_timeTableItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="2sp"
            android:paddingHorizontal="5sp"
            android:text="Ongoing"
            android:visibility="invisible"
            android:textColor="@color/white"
            android:background="@color/material_red" />

    </LinearLayout>

<!--    Draw a horizontal line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/tv_subjectName_timeTableItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Engineering Physics (PHY-101)"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_subjectTeacher_timeTableItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="2sp"
        android:paddingHorizontal="5sp"
        android:layout_marginBottom="5dp"
        android:text="Mr. Aanand Awasthi"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        android:background="@color/black"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_roomNo_timeTableItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LT-102"
        android:fontFamily="sans-serif"
        android:textColor="#18F4DA" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_attendance_timeTableItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="2sp"
            android:paddingHorizontal="5sp"
            android:text="Present"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:background="@color/material_green"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>